<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="PhysicalEDPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.PhysicalED.model.SchoolYear</class>
        <class>com.PhysicalED.model.ClassSection</class>
        <class>com.PhysicalED.model.Student</class>
        <class>com.PhysicalED.model.SportCategory</class>
        <class>com.PhysicalED.model.PhysicalTest</class>
        <class>com.PhysicalED.model.Score</class>

        <properties>
            <!-- JDBC config: modifica qui secondo i tuoi parametri locali -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/physicaled"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1Esa0."/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <!-- Dialect Hibernate per PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <!-- Crea la struttura DB se non esiste (attenzionare su produzione) -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- (Facoltativo) UTF-8 -->
            <property name="hibernate.connection.characterEncoding" value="UTF-8"/>
        </properties>
    </persistence-unit>
</persistence>